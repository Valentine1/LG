<UserControl
    x:Class="LG.Views.IndicatorV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LG_GameModuleV.Controls.Indicator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition  />
                </Grid.RowDefinitions>
                <StackPanel   x:Name="stripeContainer"  Background="Black" HorizontalAlignment="Center" >
                    <StackPanel.RenderTransform>
                        <CompositeTransform  x:Name="stripeContainerTrans" TranslateY="0" />
                    </StackPanel.RenderTransform>
                </StackPanel>
                <Canvas  Height="4" VerticalAlignment="Top"  Background="#171717"  />
                <Canvas  Height="4" Margin="0,0,0,-4" VerticalAlignment="Bottom" Background="#2A2A2A" />

                <Border Height="4" Background="#171717" VerticalAlignment="Top" HorizontalAlignment="Stretch" />
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>
